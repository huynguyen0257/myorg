{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@myorg/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@myorg/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@tommysg/facebook-ads": ["libs/features/facebook-ads/src/index.ts"],
      "@tommysg/facebook-ads-module": [
        "libs/features/facebook-ads/src/index.ts"
      ],
      "@tommysg/google-ads-module": ["libs/features/google-ads/src/index.ts"],
      "@tommysg/google-analytic-module": [
        "libs/features/google-analytic/src/index.ts"
      ],
      "@tommysg/oauth-module": ["libs/features/oauth/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
